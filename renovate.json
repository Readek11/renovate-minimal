{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "commitMessageAction": "chore: bump",
      "commitMessageTopic": "new_renovate from ...",
      "commitMessageExtra": "to ..."
    }
  ],
  "bumpVersion": "patch",
  "rangeStrategy": "bump"
}